// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "git_panel": {
    "dock": "right"
  },
  "restore_on_startup": "none",
  "preview_tabs": {
    "enable_preview_from_file_finder": true
  },
  "git": {
    "path_style": "file_name_first",
    "blame": {
      "show_avatar": true
    },
    "inline_blame": {
      "show_commit_summary": true
    }
  },
  "audio": {
    "experimental.legacy_audio_compatible": false,
    "experimental.denoise": false,
    "experimental.auto_speaker_volume": false
  },
  "notification_panel": {
    "button": true
  },
  "collaboration_panel": {
    "button": false
  },
  "image_viewer": {
    "unit": "decimal"
  },
  "colorize_brackets": false,
  "middle_click_paste": false,
  "tasks": {
    "prefer_lsp": true
  },
  "completions": {
    "words_min_length": 2
  },
  "show_whitespaces": "selection",
  "use_on_type_format": false,
  "indent_guides": {
    "coloring": "fixed"
  },
  "show_wrap_guides": true,
  "toolbar": {
    "code_actions": true,
    "agent_review": false,
    "selections_menu": true,
    "quick_actions": true,
    "breadcrumbs": true
  },
  "minimap": {
    "max_width_columns": 64,
    "thumb_border": "full",
    "thumb": "always",
    "show": "never"
  },
  "relative_line_numbers": "disabled",
  "gutter": {
    "runnables": true,
    "line_numbers": true
  },
  "show_signature_help_after_edits": false,
  "auto_signature_help": false,
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "sticky_scroll": {
    "enabled": true
  },
  "autosave": "on_focus_change",
  "rounded_selection": true,
  "selection_highlight": true,
  "minimum_contrast_for_highlights": 45.0,
  "ui_font_weight": 400.0,
  "ui_font_size": 16.0,
  "agent_ui_font_size": 14.0,
  "agent_buffer_font_size": 13.0,
  "buffer_font_weight": 300.0,
  "show_completion_documentation": true,
  "inlay_hints": {
    "show_background": false,
    "show_other_hints": true,
    "show_parameter_hints": false,
    "show_type_hints": false,
    "show_value_hints": true,
    "enabled": true
  },
  "tab_bar": {
    "show_tab_bar_buttons": true,
    "show_nav_history_buttons": true,
    "show": true
  },
  "tabs": {
    "show_diagnostics": "all",
    "show_close_button": "hover",
    "file_icons": true,
    "git_status": true
  },
  "title_bar": {
    "show_menus": false,
    "show_branch_icon": true
  },
  "outline_panel": {
    "file_icons": true,
    "button": true
  },
  "project_panel": {
    "hide_hidden": false,
    "show_diagnostics": "all",
    "auto_fold_dirs": true,
    "indent_size": 15.0,
    "default_width": 240.0,
    "hide_root": false,
    "drag_and_drop": true,
    "sticky_scroll": true,
    "git_status": true,
    "folder_icons": true,
    "file_icons": true,
    "entry_spacing": "comfortable"
  },
  "agent": {
    "notify_when_agent_waiting": "never",
    "button": false,
    "expand_terminal_card": false,
    "expand_edit_card": false,
    "enable_feedback": false,
    "single_file_review": false,
    "default_model": {
      "provider": "ollama",
      "model": "qwen2.5-coder:3b"
    }
  },
  "icon_theme": "JetBrains New UI Icons (Light)",
  "edit_predictions": {
    "enabled_in_text_threads": false,
    "mode": "subtle",
    "disabled_globs": [
      "**/.env*",
      "**/*.pem",
      "**/*.key",
      "**/*.cert",
      "**/*.crt",
      "**/secrets.yml"
    ]
  },
  "extend_comment_on_newline": true,
  "languages": {
    "TypeScript": {
      "show_edit_predictions": false,
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    }
  },
  "show_edit_predictions": false,
  "terminal": {
    "blinking": "on",
    "font_weight": 300.0,
    "font_family": "JetBrains Mono NL",
    "font_size": 13.0,
    "dock": "bottom",
    "working_directory":"current_project_directory",
    "shell": "system"
  },
  "base_keymap": "JetBrains",
  "theme": "JetBrains Light",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": false,
  "format_on_save": "off",
  "buffer_line_height": "standard",
  "buffer_font_size": 14.0,
  "buffer_font_family": "Maple Mono NF CN",
  "buffer_font_features": {
    "cv01": 1
  },
  "ui_font_family": "Inter",
  "ui_font_features": {
    "cv01": 1
  },
  "show_completions_on_input": true,
  "always_treat_brackets_as_autoclosed": false,
  "cursor_shape": "bar",
  "tab_size": 2
}
